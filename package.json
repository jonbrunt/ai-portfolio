{
  "name": "ai-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "linter": "eslint app --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --check --ignore-path .gitignore .",
